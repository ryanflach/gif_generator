<h1>All Categories</h1>
<ul>
  <% Category.all.each do |cat| %>
    <li><%= link_to "#{cat.name} (#{cat.gifs.count} GIFs)", admin_category_path(cat) %></li>
  <% end %>
</ul>
<div class="row col-md-12">
  <br />
  <%= link_to "Add GIF", new_admin_gif_path, class: "btn btn-default col-md-2" %>
  <%= link_to "Create Category", new_admin_category_path, class: "btn btn-default col-md-2 col-md-offset-1" %>
</div>

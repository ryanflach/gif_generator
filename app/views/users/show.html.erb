<h1 class="col-md-12"><%= @user.username %></h1>
<p>
  E-mail: <%= @user.email %>
</p>
<p>
  <%= link_to "Edit Profile", edit_user_path(@user) %>
</p>
<p>
  <%= link_to "Delete Profile", @user, method: :delete %>
</p>
<!-- <% if @user.favorites.count > 0 %> -->
  <% @user.favorites.grouped_by_category.each do |category, gifs| %>
    <%= content_tag :div, class: "row col-md-12" do %>
      <h2><%= category %></h2>
    <% end %>
    <% gifs.each_with_index do |gif, index| %>
      <%= content_tag :div, class: 'col-md-4 text-center' do %>
        <%= image_tag gif.image_path, class: "#{gif.category.name}-image-#{index + 1}" %><br />
        <%= link_to "Remove", user_gif_path(@user, gif), method: :delete%>
      <% end %>
    <% end %>
  <% end %>
<!-- <% end %> -->
